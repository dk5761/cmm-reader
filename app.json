{
  "expo": {
    "scheme": "acme",
    "userInterfaceStyle": "automatic",
    "orientation": "default",
    "newArchEnabled": true,
    "web": {
      "output": "static"
    },
    "name": "manga-reader",
    "slug": "manga-reader",
    "android": {
      "package": "com.drshnk.mangareader",
      "googleServicesFile": "./configs/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "monochromeImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "bundleIdentifier": "com.drshnk.mangareader",
      "googleServicesFile": "./configs/GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Allow Manga Reader to save exported debug logs and backup files to your photo library.",
        "NSPhotoLibraryAddUsageDescription": "Allow Manga Reader to save exported debug logs and backup files to your photo library."
      },
      "icon": {
        "dark": "./assets/icons/ios-dark.png",
        "light": "./assets/icons/ios-light.png",
        "tinted": "./assets/icons/ios-tinted.png"
      }
    },
    "extra": {
      "eas": {
        "projectId": "20f97605-b540-423f-8b73-e990ee02f371"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/20f97605-b540-423f-8b73-e990ee02f371"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon-dark.png",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/icons/splash-icon-light.png",
            "backgroundColor": "#0a0a0f"
          },
          "imageWidth": 200
        }
      ],
      
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "./plugins/withPodfileFix.js",
      "expo-live-activity"
    ]
  }
}
